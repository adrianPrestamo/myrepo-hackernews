{% extends 'base.html.twig' %}

{% block body_id 'blog_index' %}


{% block main %}
    {% set position = 0 %}
    {% for post in paginator.results %}
        {% set position = position + 1 %}
        <article>
            <h2 >
                <a href="{{ path('blog_post', {slug: post.slug}) }}">
                </a>
                <div >

                    <ul style="padding-left: 0px; padding-top: 8px;display: inline" >
                        <span >
                            {{ position }}.
                        </span>
                        {% if app.user %}
                            {% if not (app.user.id in post.userIdVotes) %}
                                <a href="{{ path('vote_post', {slug: post.slug}) }}"><i class="fa fw fa-long-arrow-up" style="color: black"></i></a>
                            {% endif %}
                        {% else %}
                            <a href="{{ path('security_login') }}"><i class="fa fw fa-long-arrow-up" style="color: black"></i></a>
                        {% endif %}

                        {% if post.link %}
                            <a href="{{ post.link }}">
                                <u style="color: black">
                                    {{ post.title }}
                                </u>
                            </a>
                        {% else %}
                            <a href="{{ path('blog_post', {slug: post.slug}) }}">
                                <u style="color: black">
                                    {{ post.title }}
                                </u>
                            </a>
                        {% endif %}
                        <text style="font-size:small">

                        </text>
                    </ul>
                </div>
                <div>

                </div>
            </h2>
            <p class="post-metadata">
                <span class="metadata"> {{ post.numberOfVotes }} points by -></span>
                <a href="{{ path('user_show', {username: post.author.username}) }}">
                    <u>
                        <span class="metadata"> {{ post.author.username }}</span>
                    </u>
                </a>

                <span class="metadata"><i class="fa fa-calendar"></i> {{ post.publishedAt|format_datetime('short', 'short', '', 'UTC') }}</span>
                <a href="{{ path('blog_post', {slug: post.slug}) }}">
                    <u>
                        <span class="metadata"></i>| discuss</span>
                    </u>
                </a>

            </p>

            {{ include('blog/_post_tags.html.twig') }}
        </article>
        <hr style="  display: block;  margin-top: 0.5em;  margin-bottom: 0.5em;  margin-left: auto;  margin-right: auto;  border-style: inset;  border-width: 1px;">

    {% else %}
        <div class="well">{{ 'post.no_posts_found'|trans }}</div>
    {% endfor %}
    {% if paginator.hasToPaginate %}
        <div class="navigation text-center">
            <ul class="pagination">
                {% if paginator.hasPreviousPage %}
                    <li class="prev"><a href="{{ path('blog_index_paginated', {page: paginator.previousPage, tag: tagName}) }}" rel="previous"><i class="fa fw fa-long-arrow-left"></i> {{ 'paginator.previous'|trans }}</a></li>
                {% else %}
                    <li class="prev disabled"><span><i class="fa fw fa-arrow-left"></i> {{ 'paginator.previous'|trans }}</span></li>
                {% endif %}

                {% for i in 1..paginator.lastPage %}
                    {% if i == paginator.currentPage %}
                        <li class="active"><span>{{ i }} <span class="sr-only">{{ 'paginator.current'|trans }}</span></span></li>
                    {% else %}
                        <li><a href="{{ path('blog_index_paginated', {page: i, tag: tagName}) }}">{{ i }}</a></li>
                    {% endif %}
                {% endfor %}
                {% if paginator.hasNextPage %}
                    <li class="next"><a href="{{ path('blog_index_paginated', {page: paginator.nextPage, tag: tagName}) }}" rel="next">{{ 'paginator.next'|trans }} <i class="fa fw fa-arrow-right"></i></a></li>
                {% else %}
                    <li class="next disabled"><span>{{ 'paginator.next'|trans }} <i class="fa fw fa-arrow-right"></i></span></li>
                {% endif %}
            </ul>
        </div>
    {% endif %}
{% endblock %}

{% block sidebar %}

{% endblock %}
